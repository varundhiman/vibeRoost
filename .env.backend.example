# Supabase Configuration for Backend Services
# Get these values from your Supabase Dashboard > Settings > Database

# Your Supabase project URL (same as frontend)
SUPABASE_URL=https://your-project.supabase.co

# Database connection (get from Supabase Dashboard > Settings > Database)
SUPABASE_DB_HOST=your-project.supabase.co
SUPABASE_DB_PORT=6543
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USERNAME=postgres
SUPABASE_DB_PASSWORD=your-database-password

# Supabase keys (get from Supabase Dashboard > Settings > API)
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Redis Configuration (optional - can disable for now)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage
SUPABASE_STORAGE_BUCKET=social-rec-uploads